<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_add_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Click Image to set/change Profile"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_add_photo"
        android:scaleType="centerCrop"
        app:shapeAppearance="?attr/circleRadius"
        android:layout_below="@id/tv_add_profile"
        app:civ_border_color="@color/black"
        app:civ_border_width="3dp"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:text="Change Profile Image"
        app:icon="@drawable/ic_tick"
        app:iconSize="30dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        android:textSize="20sp"
        android:textColor="@color/black"
        style="?attr/materialButtonOutlinedStyle"
        android:textAllCaps="true"
        android:visibility="gone"/>

</RelativeLayout>